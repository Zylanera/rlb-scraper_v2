datasource db {
  provider = "sqlite"
  url      = "file:./database/sqlite.db"
}

generator client {
  provider = "prisma-client-js"
}

model Bank {
  blz       String   @id
  name      String
  urlPath   String
}

model Product {
  id        Int      @id @default(autoincrement())
  laufzeit  String
  zinssatz  Float
  variante  String
  bild      Boolean
  strecke   String
  bankBlz   String  // Bankleitzahl direkt im Product speichern
}

