datasource db {
  provider = "sqlite"
  url      = "file:./database/sqlite.db"
}

generator client {
  provider = "prisma-client-js"
}

model Bank {
  blz       String   @id
  name      String
  urlPath   String
  branches  Branch[]
}

model Branch {
  id         Int       @id           // z.â€¯B. 32985
  name       String
  scrapedAt  DateTime  @default(now())
  bankBlz    String
  bank       Bank      @relation(fields: [bankBlz], references: [blz])
  products   Product[]
}

model Product {
  id        Int      @id @default(autoincrement())
  laufzeit  String
  zinssatz  Float
  variante  String
  bild      Boolean
  strecke   String
  branchId  Int
  branch    Branch   @relation(fields: [branchId], references: [id])
}
